{
    "name": "transcendence-client",
    "version": "1.0.0",
    "description": "Frontend for Transcendence Game",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "build": "npm run build:css && tsc --project tsconfig.build.json",
        "build:css": "tailwindcss -i ./public/config/input.css -o ./public/config/output.css --minify",
        "clean": "rm -rf public/dist"
    },
    "devDependencies": {
        "typescript": "^5.9.2",
        "tailwindcss": "^3.4.0",
        "autoprefixer": "^10.4.16",
        "postcss": "^8.4.32"
    }
}
