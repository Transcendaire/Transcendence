{
  "name": "transcendence-server",
  "version": "1.0.0",
  "description": "Backend for Transcendence Game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd ../client && npm run build",
    "build:server": "tsc --project tsconfig.build.json",
    "dev": "tsx watch src/index.docker.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "^8.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "fastify": "^4.24.3",
    "sharp": "^0.34.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.2"
  }
}
