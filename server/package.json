{
  "name": "transcendence-server",
  "version": "1.0.0",
  "description": "Backend for Transcendence Game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd ../client && npm run build",
    "build:server": "tsc",
    "dev": "concurrently \"tsc --watch\" \"nodemon --watch dist dist/index.js\"",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@fastify/websocket": "^8.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "fastify": "^4.24.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.2"
  }
}
